{
  "extends": "@stackloom/typescript-config/react-library",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@stackloom/canvas-ui/*": ["./src/index.tsx"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
